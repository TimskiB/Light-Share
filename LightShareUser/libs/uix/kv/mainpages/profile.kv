
<SettingsScreen>:

    name: "profile"
    AKSilverAppbar:
        max_height: '250dp'
        title:'Setting'
        left_action_items: [["arrow-left", lambda x: root.parent.parent.parent.parent.nav_back()]]
        right_action_items: [["magnify", lambda x: None]]
        pin_top: True
        hide_toolbar: True
        radius: dp(20)
        toolbar_bg: app.theme_cls.primary_color
        AKSilverAppbarHeader:
            MDScreen:
                md_bg_color: app.theme_cls.primary_color
                MDBoxLayout:
                    adaptive_height:True
                    orientation: "vertical"
                    pos_hint:{'center_x':.5,'center_y':.5}
                    spacing:"20dp"
                    MDBoxLayout:
                        size_hint:None,None
                        size:'85dp','85dp'
                        pos_hint:{'center_x':.5,'center_y':.5}
                        AsyncImage:
                            id: user_image
                            source: './assets/images/profile.png'
                            allow_stretch: True

                            keep_ratio: False
                    MDLabel:
                        text:root.user_email
                        halign:"center"
                        color: 1, 1, 1, 1
                        adaptive_height:True
        AKSilverAppbarContent:
            padding:'20dp'
            spacing:'20dp'
            id: content
            size_hint_y: None
            md_bg_color: rgba(246, 250, 255, 255)
            height: self.minimum_height
            orientation: "vertical"
            MDLabel:
                text:"COMMUNICATIONS"
                adaptive_height:True
            MDCard:
                size_hint_y:None
                height:"80dp"
                orientation:"vertical"
                radius:20
                padding:"10dp"
                TwoLineIconListItem:
                    text: "Wireless and Network"
                    secondary_text: "Server connection, Peer to Peer"
                    IconLeftWidget:
                        icon: "./assets/images/settings/wifi.png"
#                TwoLineIconListItem:
