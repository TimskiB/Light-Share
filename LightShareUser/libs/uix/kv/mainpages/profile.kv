                size_hint_y:None
                height:"80dp"
                orientation:"vertical"
                radius:20
                padding:"10dp"
                TwoLineIconListItem:
                    text: "Notifications"
                    secondary_text: "Status bar, Alerts"
                    divider:None
                    IconLeftWidget:
                        icon: "./assets/images/settings/bell.png"
            MDLabel:
