<CustomImageTile@SmartTileWithLabel>:
    size_hint_y:None
    font_name: 'DecaL'
    size_hint_x:None
    height:'160dp'
    width:'160dp'

<GridCard@MDCard>:
    #ripple_behavior:True
    orientation:'vertical'
    source:''
    radius:25
    folder_size:''
    text:''
    padding:'20dp'
    spacing:'20dp'
    size_hint_y:None
    height:'150dp'
    Image:
        source:root.source
    MDBoxLayout:
        orientation:'vertical'
        adaptive_height:True
        MDLabel:
            text:root.folder_size
            adaptive_height:True
            halign:'center'
            font_name: 'DecaM'
            #font_style:'Caption'
        MDLabel:
            text:root.text
            adaptive_height:True
            font_name: 'DecaL'
            halign:'center'

<AllFilesScreen>:

    name: "allfiles"
    id: allfiles_screen
    #on_enter: root.start_title_change()
    MDFloatLayout:
        md_bg_color: rgba(246, 250, 255, 255)
        #orientation:'vertical'
        MDIconButton:
            icon: 'arrow-left'
            user_font_size: '28sp'
            pos_hint: {'center_x': 0.08, 'center_y': 0.9}
            on_release: root.manager.current = 'files'

        MDLabel:
#            id: files_title2
            id: user_name
            text: root.user_name
            markup: True
            font_name: "DecaB"
            halign: "center"
            pos_hint: {"center_x": .50, "center_y": .9}
            font_size: '38sp'
            opacity: 1
        ScrollView:
            bar_width:0
            pos_hint: {"center_y": .4}
            size_hint: 1, .8
            MDBoxLayout:
                orientation:'vertical'
                adaptive_height:True
                spacing:'20dp'
                padding:'20dp'
                MDLabel:
                    text:'RECENTLY'
                    #font_style:"Subtitle2"
                    font_name: 'DecaB'
                ScrollView:
                    size_hint_y:None
                    height:'160dp'
                    bar_width:0
                    MDBoxLayout:
                        adaptive_width:True
                        spacing:'15dp'
                        CustomImageTile:
                            source:"./assets/images/guitar.png"
                            font_name: "DecaM"
                            text:'[size=36]guitar[/size]\n[size=18]guitar.png[/size]'
                        CustomImageTile:
                            source:"./assets/images/Latte.jpg"
                            font_name: "DecaM"
                            text:'[size=36]Latte[/size]\n[size=18]Latte.jpg[/size]'
                        CustomImageTile:
                            source:"./assets/images/light-bulb.png"
                            font_name: "DecaM"
                            text:'[size=36]light-bulb[/size]\n[size=18]light-bulb.png[/size]'
                        CustomImageTile:
                            source:"./assets/images/kitten.png"
                            font_name: "DecaM"
                            text:'[size=36]kitten[/size]\n[size=18]kitten.png[/size]'
                MDLabel:
                    text:'CATEGORIES'
                    #font_style:"Subtitle2"
                    font_name: "DecaB"
                MDGridLayout:
                    cols:2
                    adaptive_height:True
                    spacing:"15dp"
                    GridCard:
                        source:'./assets/icons/downloads-folder.ico'
                        text:'Downloads'
                        folder_size:'82 MB'
                    GridCard:
                        source:'./assets/icons/images-folder.ico'
                        text:'Images'
                        folder_size:'434 MB'
                    GridCard:
                        source:'./assets/icons/videos-folder.ico'
                        text:'Videos'
                        folder_size:'2.9 GB'
                    GridCard:
                        source:'./assets/icons/audios-folder.ico'
                        text:'Audios'
                        folder_size:'384 MB'
                    GridCard:
                        source:'./assets/icons/documents-folder.ico'
                        text:'Documents'
                        folder_size:'49 MB'
                    GridCard:
                        source:'./assets/icons/app-folder.ico'
                        #font_name: "DecaM"
                        text:'Apps'
                        folder_size:'20 GB'
                MDLabel:
                    text:'COLLECTIONS'
                    font_name: 'DecaB'
                    #font_style:"Subtitle2"
                MDBoxLayout:
                    size_hint_y:None
                    height:'85dp'
                    spacing:'15dp'
                    MDCard:
                        ripple_behavior:True
                        orientation:'vertical'
                        radius:15
                        padding:'15dp'
                        adaptive_height:True
                        MDIconButton:
                            pos_hint:{'center_x':.5,'center_y':.5}
                            icon:'star'
                            theme_text_color:'Custom'
                            text_color:1,1,0,1
                        MDLabel:
                            text:'Favorite'
                            halign:'center'
                            font_name: 'DecaM'
                            adaptive_height:True
                    MDCard:
                        ripple_behavior:True
                        orientation:'vertical'
                        radius:15
                        padding:'15dp'
                        adaptive_height:True
                        MDIconButton:
                            pos_hint:{'center_x':.5,'center_y':.5}
                            icon:'lock'
                        MDLabel:
                            text:'Security Folder'
                            font_name: 'DecaM'
                            halign:'center'
                            adaptive_height:True
                MDLabel:
                    text:'CLOUD STORAGE'
                    font_name: 'DecaB'
                    #font_style:"Subtitle2"
                MDBoxLayout:
                    size_hint_y:None
                    height:'155dp'
                    spacing:'15dp'
                    GridCard:
                        source:'./assets/icons/google-drive.ico'
                        text:'Google Drive'
                        font_name: 'DecaM'
                        folder_size:'10 GB Free'
                    GridCard:
                        source:'./assets/icons/dropbox.ico'
                        text:'Dropbox'
                        font_name: 'DecaM'
                        folder_size:'5 GB Free'
                MDLabel:
                    text:'INTERNAL STORAGE'
                    font_name: 'DecaB'
                    #font_style:"Subtitle2"
                MDBoxLayout:
                    size_hint_y:None
                    height:'125dp'
                    spacing:'15dp'
                    MDCard:
                        ripple_behavior:True
                        orientation:'vertical'
                        radius:15
                        padding:'15dp'
                        adaptive_height:True
                        MDIconButton:
                            pos_hint:{'center_x':.5}
                            icon:'cellphone-android'
                        MDLabel:
                            text:'Device Storage'
                            adaptive_height:True
                            font_name: 'DecaM'
                            halign:'center'
                        MDLabel:
                            text:'83 GB Free'
                            adaptive_height:True
                            font_name: 'DecaL'
                            #font_style:'Caption'
                            halign:'center'
                    MDCard:
                        ripple_behavior:True
                        orientation:'vertical'
                        radius:15
                        padding:'15dp'
                        adaptive_height:True
                        MDIconButton:
                            pos_hint:{'center_x':.5}
                            icon:'sd'
                            #font_name: 'DecaM'
                        MDLabel:
                            text:'SD Card'
                            adaptive_height:True
                            halign:'center'
                            font_name: 'DecaM'
                        MDLabel:
                            text:'3.6 GB Free'
                            adaptive_height:True
                            #font_style:'Caption'
                            halign:'center'
                            font_name: 'DecaL'
