        HoverButton:
            text: "LOGIN"
            font_name: "DecaM"
            font_size: "20sp"
            size_hint: .5, .09
            pos_hint: {"center_x": .5, "center_y": .12}
            background_color: 1, 1, 1, 0
            color: 1, 1, 1, 1
            on_release:
                root.email_login()
            canvas.before:
                Color:
                    rgb: self.background
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [8]

        GoogleImage:
            source: "./assets/images/icons/google.png"
            pos_hint: {"center_x": .9, "center_y": .12}
            size_hint: .08, .08
            #on_release: root.google_login()

        MDTextButton:
            text: "Don't have an account? Sign up here"
            font_name: "DecaL"
            theme_text_color: "Custom"
            on_release: root.manager.transition.direction='left'; root.manager.current = "register"
            ripple: True
            color: 17/255, 17/255, 17/255, 0.4
            pos_hint: {"center_x": .5, "center_y": .03}