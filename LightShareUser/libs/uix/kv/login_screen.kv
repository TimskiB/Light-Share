#: import HoverButton libs.uix.components.hover_button.HoverButton
#: import GoogleImage libs.uix.baseclass.login_screen.GoogleImage

<Notification@BoxLayout>
    padding: dp(10)

    MDLabel:
        text: "Missing Login Info?"
        theme_text_color: "Secondary"
        halign: "left"

    MDIconButton:
        id: button
        icon: "close"
        halign: "right"
        valign: "center"

<ErrorDialog@BoxLayout>:
    orientation: "vertical"
    spacing: dp(10)
    padding: dp(20)

    MDLabel:
        text: "Log in Failed"
        halign: "center"
        theme_text_color: "Custom"
        text_color: .9, 0, 0, 1

    MDLabel:
        text: "Make sure you entered the correct information and try again."
        halign: "center"
        theme_text_color: "Custom"
        text_color: .9, 0, 0, 1
        font_style: "Caption"

    MDFillRoundFlatButton:
        id: button
        text: "Dismiss"
        md_bg_color: .9, 0, 0, 1
        pos_hint: {"center_x": .5}

<LoginScreen>

